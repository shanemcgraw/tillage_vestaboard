# Database (Heroku provides this automatically)
DATABASE_URL=postgres://localhost:5432/beacon

# SendGrid (for sending auto-reply emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=beacon@tillage.place

# Vestaboard Read/Write API Key
# Get this from: Vestaboard app > Settings > Installable > Enable Read/Write API
VESTABOARD_API_KEY=your-read-write-key

# Admin authentication
# Generate with: npm run hash-password -- "your-password"
ADMIN_PASSWORD_HASH=$2b$10$...
ADMIN_PASSWORD="thebeaconsarelit"

# Session secret (generate a random string)
SESSION_SECRET=change-this-to-a-random-string

# Optional: Port (Heroku sets this automatically)
PORT=3000
